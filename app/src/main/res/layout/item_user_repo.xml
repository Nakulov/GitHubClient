<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:padding="8dp">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/titleTextView" tools:text="Заголовок"
            android:singleLine="true" android:textColor="@android:color/holo_blue_dark" android:textSize="24sp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/descriptionTextView" tools:text="Описание"
            android:maxLines="5" android:textSize="14sp" android:layout_marginTop="8dp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/languageTextView" tools:text="Java"
            android:singleLine="true" android:textColor="@android:color/holo_orange_dark" android:textSize="16sp"/>
</LinearLayout>