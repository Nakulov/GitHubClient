<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/profileLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:visibility="visible">

        <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_collapseMode="parallax" android:paddingBottom="16dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="104dp"
                            android:layout_height="104dp"
                            android:id="@+id/avatarImageView"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="56dp"
                            android:src="@drawable/ic_avatar_placeholder"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                            android:text="@string/followers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toStartOf="@+id/avatarImageView"
                            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp"
                            android:id="@+id/followersTitleTextView"
                            app:layout_constraintTop_toBottomOf="@+id/followersValueTextView"
                            android:textColor="?attr/titleTextColor" android:textSize="16sp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/followersValueTextView"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp"
                            app:layout_constraintEnd_toStartOf="@+id/avatarImageView"
                            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
                            app:layout_constraintTop_toTopOf="@+id/avatarImageView"
                            app:layout_constraintBottom_toBottomOf="@+id/avatarImageView"
                            tools:text="3"
                            android:textColor="?attr/titleTextColor" android:textSize="24sp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/followingValueTextView" app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintStart_toEndOf="@+id/avatarImageView" android:layout_marginStart="8dp"
                            app:layout_constraintTop_toTopOf="@+id/avatarImageView"
                            app:layout_constraintBottom_toBottomOf="@+id/avatarImageView"
                            tools:text="11"
                            android:textColor="?attr/titleTextColor" android:textSize="24sp"/>
                    <TextView
                            android:text="@string/following"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/followingTitleTextView" app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintStart_toEndOf="@+id/avatarImageView" android:layout_marginStart="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/followingValueTextView"
                            android:textColor="?attr/titleTextColor" android:textSize="16sp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/nameTextView" app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp"
                            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/avatarImageView"
                            android:textColor="?attr/titleTextColor"
                            tools:text="Вася Пупкин"
                            android:textSize="16sp"/>
                    <TextView
                            android:text="@string/about_me"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/aboutMeTextView" android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/nameTextView"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp" android:textColor="?attr/titleTextColor"
                            android:textSize="14sp"/>
                    <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp" app:srcCompat="@drawable/ic_bookmark_border"
                            android:id="@+id/favouriteImageView"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp" android:contentDescription="@string/cache_user"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/userReposRecyclerView"
                android:layout_marginBottom="8dp"
                tools:listitem="@layout/item_user_repo"
                app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <include layout="@layout/layout_waiting" tools:visibility="gone"/>
    <include layout="@layout/layout_error" tools:visibility="gone"/>
</FrameLayout>